<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>api_integration.Presenter.API</RootNamespace>
    <UserSecretsId>db6e7f74-c675-4bf8-bcf2-e17365aac7cd</UserSecretsId>
  </PropertyGroup>

  <!-- DynamicProxyGenAssembly2 is a temporary assembly built by mocking systems that use CastleProxy 
  like Moq or NSubsitute. It is generated when the mock is needed and 
  disposed of after the tests are finished. Source: https://stackoverflow.com/questions/15405040/what-is-the-dynamicproxygenassembly2-assembly -->
  <ItemGroup>
    <InternalsVisibleTo Include="api-integration.UnitTests" />
    <InternalsVisibleTo Include="DynamicProxyGenAssembly2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\api-integration.Infrastructure\api-integration.Infrastructure.csproj" />
    <ProjectReference Include="..\api-integration.Application\api-integration.Application.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.10" />
    <PackageReference Include="Scalar.AspNetCore" Version="2.11.0" />
     <PackageReference Include="Swashbuckle.AspNetCore" Version="6.6.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\api-integration.Infrastructure\api-integration.Infrastructure.csproj" />
    <ProjectReference Include="..\api-integration.Application\api-integration.Application.csproj" />
  </ItemGroup>

</Project>
